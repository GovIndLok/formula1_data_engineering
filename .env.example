# =============================================================================
# F1 Data Engineering - Environment Variables
# =============================================================================
# Copy this file to .env and adjust values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Airflow Configuration
# -----------------------------------------------------------------------------
# User ID for Airflow containers (use `id -u` to get your user ID)
AIRFLOW_UID=50000

# Airflow admin credentials (change in production!)
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Executor: LocalExecutor for development, CeleryExecutor for production
AIRFLOW_EXECUTOR=LocalExecutor

# Webserver port
AIRFLOW_WEBSERVER_PORT=8080

# Fernet key for encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW_FERNET_KEY=

# DAG settings
AIRFLOW_LOAD_EXAMPLES=false
AIRFLOW_DAGS_PAUSED_AT_CREATION=true

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# FastF1 Configuration
# -----------------------------------------------------------------------------
# Path for FastF1 cache (speeds up data loading significantly)
FASTF1_CACHE_PATH=/app/data/cache

# -----------------------------------------------------------------------------
# Data Pipeline Configuration
# -----------------------------------------------------------------------------
# Output path for processed data
DATA_OUTPUT_PATH=/app/data/processed

# Seasons to process (comma-separated)
F1_SEASONS=2024,2025

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
